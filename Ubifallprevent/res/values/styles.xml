<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light" />

    <style name="PollRadioButton" parent="@android:style/Widget.Holo.Light.CompoundButton.RadioButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center_vertical|center_horizontal|left</item>
        <item name="android:layout_marginBottom">@dimen/padding_small</item>
    </style>

    <style name="PollCheckBox" parent="@android:style/Widget.Holo.Light.CompoundButton.CheckBox">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textColor">#FF0000</item>
        <item name="android:gravity">center_vertical|center_horizontal|left</item>
        <item name="android:background">@drawable/poll_choice_background</item>
        <item name="android:layout_marginBottom">@dimen/padding_small</item>
    </style>

</resources>